# MongoDB Connection
# For local MongoDB:
MONGODB_URL=mongodb://localhost:27017

# For MongoDB Atlas (cloud):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net

# JWT Secret Keys
# Generate secure random strings using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_BUYER_KEY=your_buyer_jwt_secret_key_change_this
JWT_SELLER_KEY=your_seller_jwt_secret_key_change_this

# Express Session Secret
EXPRESS_SESSION_SECRET=your_express_session_secret_change_this
